<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h2>Comments</h2>

    <% @article.comments.each do |comment| %>
      <strong>Commenter:</strong>
      <%= comment.commenter%>
      <br>
      <%= comment.body%>
      <br>
      <%= link_to 'Delete Comment', [comment.article, comment],
                  method: :delete, data: {confirm: 'Are you sure?'} %>


    <% end %>

<h3>Add a comment:</h3>

<%= render 'comments/form'%>


<%= link_to 'Back', articles_path %>